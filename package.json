{
  "name": "@chesslablab/react-board",
  "type": "module",
  "version": "0.1.5",
  "description": "An easy-to-use React chessboard.",
  "keywords": [
    "chess",
    "chessboard",
    "component",
    "hook",
    "react",
    "redux",
    "state",
    "ui"
  ],
  "license": "MIT",
  "private": false,
  "source": "src/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "build": "microbundle --no-compress --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx",
    "dev": "microbundle watch",
    "test": "react-scripts test"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react-scripts": "5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chesslablab/react-board.git"
  },
  "author": "Jordi Bassagana",
  "bugs": {
    "url": "https://github.com/chesslablab/react-board/issues"
